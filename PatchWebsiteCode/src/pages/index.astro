---
import Layout from '../layouts/Layout.astro';

// UI Components
import Button from '../components/ui/Button.astro';
import Divider from '../components/ui/Divider.astro';
import SectionHeader from '../components/ui/SectionHeader.astro';
import PhotoFrame from '../components/ui/PhotoFrame.astro';

// Card Components
import CardAlt from '../components/cards/CardAlt.astro';
import SummerProgrammeCard from '../components/cards/SummerProgrammeCard.astro';
import InlineTestimonial from '../components/cards/InlineTestimonial.astro';
import TestimonialCard from '../components/cards/TestimonialCard.astro';

// Section Components
import Header from '../components/sections/Header.astro';
import Hero from '../components/sections/Hero.astro';
import CardGridSection from '../components/sections/CardGridSection.astro';
import LetterSection from '../components/sections/LetterSection.astro';
import FeaturedTestimonial from '../components/sections/FeaturedTestimonial.astro';
import MentorsSection from '../components/sections/MentorsSection.astro';
import SupportersSection from '../components/sections/SupportersSection.astro';
import ApplySection from '../components/sections/ApplySection.astro';
import Footer from '../components/sections/Footer.astro';

// Mentor data
const mentors = [
	{ name: "Áine Kerr", title: "Co-Founder and COO at Kinzen, previously Facebook" },
	{ name: "Des Traynor", title: "Co-Founder & CSO at Intercom, valued at over $1.6B" },
	{ name: "Bobby Healy", title: "Founder & CEO of Manna, scaled Cartrawler to $650m" },
	{ name: "Prof. Luke O'Neil", title: "Professor of Biology at Trinity College Dublin" },
	{ name: "Patrick Walsh", title: "Founder of Dogpatch Labs" },
	{ name: "James Whelton", title: "Founder of CoderDojo" },
	{ name: "Celine Halioua", title: "Founder of Loyal" },
	{ name: "Patrick Collison", title: "Co-founder and CEO of Stripe" },
];

// Supporter data
const supporters = [
	{ name: "Stripe", logoSrc: "/PartnerLogos/stripe-logo-black-and-white.png" },
	{ name: "OpenAI", logoSrc: "/PartnerLogos/Open-AI-White-Logo-PNG.jpg" },
	{ name: "NDRC", logoSrc: "/PartnerLogos/NDRC_Logo_White-01.png" },
	{ name: "Abbey Capital", logoSrc: "/PartnerLogos/AC_Old_New_Logo_Artboard-2.png" },
	{ name: "Dogpatch Labs" },
];
---

<Layout title="Patch - Ireland's Community for Exceptional Young Technologists">
	<Header logoText="Patch" />

	<!-- ============================================
		 SECTION 1: HERO
		 ============================================ -->
	<Hero
		headline="Ireland's community for exceptional young technologists, scientists, and entrepreneurs"
		description="We give you the environment to build, research, or start something real — with the peers, mentorship, and resources to do it properly."
	>
		<Fragment slot="actions">
			<Button variant="cta" href="#apply">
				Apply to Summer Programme 2025
			</Button>
			<Button variant="secondary" href="#summer-programme">
				Learn more
			</Button>
		</Fragment>
	</Hero>

	<!-- ============================================
		 SECTION 2: WHAT PATCH DOES
		 ============================================ -->
	<section class="what-patch-does" id="about">
		<SectionHeader
			label="How it works"
			title="Programmes, community, and mentorship"
			subtitle="Patch's mission is to find and support talented youth from all over Ireland, helping them become the next generation of impactful leaders across science, technology, research, and policy."
		/>

		<div class="intro-text">
			<p>We do this through running multiple interconnected initiatives, all aimed at taking young people seriously, raising their ambitions, connecting them with energetic peers who they'll form lifelong connections with, and learning directly from Ireland's top founders, experts, and older peers.</p>
		</div>
	</section>

	<LetterSection signature="Tom McCarthy, Founder of Patch">
		<p>Patch exists to bring exceptional young people into a community that takes them seriously. Talent on its own is fragile — it needs encouragement, peers, and examples of what's possible in order to grow.</p>

		<hr>

		<p>We don't prescribe paths or outcomes. Instead, we create the conditions where ambition is normal, curiosity is valued, and young people are consistently encouraged to aim higher than they might have on their own.</p>
	</LetterSection>

	<Divider />

	<!-- ============================================
		 SECTION 3: CORE PROGRAMMES
		 ============================================ -->
	<section class="programmes-section" id="programmes">
		<SectionHeader
			label="Our programmes"
			title="Multiple paths into Patch"
		/>

		<div class="programmes-grid">
			<SummerProgrammeCard
				title="Summer Programme"
				description="Seven weeks. 30 people. The flagship entry point into Patch. Teams build startups, research projects, or technology. Everything covered: accommodation, meals, expenses."
				href="#summer-programme"
				images={[
					{ src: "/example1.jpg", alt: "Team presenting on stage" },
					{ src: "/Example2.jpg", alt: "Group photo" },
					{ src: "/Example3.jpg", alt: "People working on projects" }
				]}
			/>

			<CardAlt
				title="TECS"
				description="A one-month competition for TY-6th year students to turn ideas into working prototypes. Run with Immersive Software Engineering at UL."
				href="#tecs"
				gridOverlay={true}
			>
				<div slot="image" class="photo-placeholder">[Photo: TECS competition]</div>
			</CardAlt>

			<CardAlt
				title="Fast Grants"
				description="€200-€1,000 grants for 13-19 year olds to build hardware, attend conferences, or start events. Quick decisions, no bureaucracy."
				href="#fast-grants"
				gridOverlay={true}
			>
				<div slot="image" class="photo-placeholder">[Photo: Grant recipient project]</div>
			</CardAlt>

			<CardAlt
				title="SF Fellowship"
				description="10 days in San Francisco. Inside startups, meeting founders, seeing what's possible."
				href="#sf-fellowship"
				gridOverlay={true}
			>
				<img slot="image" src="/SFFellowshipGoldenGateGroup.JPG" alt="SF Fellowship group at Golden Gate Bridge" />
			</CardAlt>
		</div>
	</section>

	<Divider variant="jittered" />

	<!-- ============================================
		 SECTION 4: ALUMNI-LED INITIATIVES
		 ============================================ -->
	<section class="initiatives-section">
		<SectionHeader
			label="Started by alumni"
			title="When Patchers see a gap, they fill it"
			subtitle="The strongest signal of Patch working: alumni don't wait for permission. They start things."
		/>

		<div class="initiatives-grid">
			<CardAlt
				title="Hack Ireland"
				description="Ireland's largest student hackathon. 150 students, 30 hours, €25k in prizes. Run by Patch alumni."
				gridOverlay={true}
			>
				<img slot="image" src="/AlumniLedInitiatives/HackIrelandGroupPicture.jpg" alt="Hack Ireland hackathon" />
			</CardAlt>

			<CardAlt
				title="RoboWars"
				description="Ireland's premier hardware competition. Teams build combat robots, battle in an arena. Started by 2023 alumni."
				gridOverlay={true}
			>
				<img slot="image" src="/AlumniLedInitiatives/RoboWarsGirl.jpg" alt="RoboWars competition" />
			</CardAlt>

			<CardAlt
				title="Eirspace"
				description="Student rocket-building collective. Designing, building, launching."
				gridOverlay={true}
			>
				<div slot="image" class="photo-placeholder">[Photo: Eirspace rocket or team]</div>
			</CardAlt>

			<CardAlt
				title="Give(a)go"
				description="Community workshops teaching AI agents, game dev, hardware. Open to everyone."
				gridOverlay={true}
			>
				<div slot="image" class="photo-placeholder">[Photo: Give(a)go workshop]</div>
			</CardAlt>
		</div>
	</section>

	<Divider />

	<!-- ============================================
		 SECTION 5: WHAT ALUMNI BUILD AND DO
		 ============================================ -->
	<section class="alumni-section" id="alumni">
		<SectionHeader
			label="Where alumni go"
			title="Companies, research, and everything in between"
			subtitle="Most join at 16-17. What they go on to build and do speaks for itself."
		/>

		<!-- Companies Founded -->
		<div class="alumni-subsection">
			<h3 class="subsection-title">Companies Founded</h3>

			<div class="companies-grid">
				<div class="company-card">
					<div class="company-image">
						<div class="photo-placeholder">[Photo: Ulysses underwater drone]</div>
					</div>
					<div class="company-info">
						<h4>Ulysses</h4>
						<p class="company-tagline">Robots under the ocean</p>
						<p>Underwater drones collecting and sowing seagrass seed. Restoring marine habitats 100× faster than manual planting. $10M raised.</p>
					</div>
				</div>

				<div class="company-card">
					<div class="company-image">
						<div class="photo-placeholder">[Photo: Icarus Robotics]</div>
					</div>
					<div class="company-info">
						<h4>Icarus Robotics</h4>
						<p class="company-tagline">Robots in space</p>
						<p>Building a robotic labor force for space. Design partnerships with two commercial space station operators and NASA.</p>
					</div>
				</div>

				<div class="company-card">
					<div class="company-image">
						<div class="photo-placeholder">[Photo: Field of Vision team]</div>
					</div>
					<div class="company-info">
						<h4>Field of Vision</h4>
						<p class="company-tagline">Accessibility tech for blind sports fans</p>
						<p>TIME's 100 Best Inventions. Tactile tablets that let visually impaired fans feel live sport in real-time. Deployed at FIFA World Cup, Rugby Six Nations.</p>
					</div>
				</div>

				<div class="company-card">
					<div class="company-image">
						<div class="photo-placeholder">[Photo: Induct team at Web Summit]</div>
					</div>
					<div class="company-info">
						<h4>Induct</h4>
						<p class="company-tagline">Smart access control</p>
						<p>Plug-and-play building access. Retrofits legacy doors in 15 minutes. Youngest team accepted to NDRC. 75% cost reduction.</p>
					</div>
				</div>
			</div>
		</div>

		<!-- Testimonial after Companies -->
		<InlineTestimonial
			variant="highlighted"
			quote={`<span class="highlight">Growing up in rural Kerry, I'd never had anyone to talk to about genetics and AI.</span> During Patch, I met people who cared about the same things. I didn't feel alone anymore.`}
			authorName="Conor Casey"
			authorTitle="Patch 2020"
			initials="CC"
		/>

		<!-- Research & Academia -->
		<div class="alumni-subsection">
			<h3 class="subsection-title">Research & Academia</h3>

			<div class="research-grid">
				<div class="research-item">
					<div class="research-image">
						<div class="photo-placeholder">[Photo: Dylan Cuskelly in Cambridge gowns]</div>
					</div>
					<div class="research-info">
						<h4>Cambridge Physics PhD</h4>
						<p>Pursuing fundamental research at one of the world's top institutions.</p>
					</div>
				</div>

				<div class="research-item">
					<div class="research-image">
						<div class="photo-placeholder">[Photo: Lab researcher]</div>
					</div>
					<div class="research-info">
						<h4>Muscles-on-a-chip research</h4>
						<p>Advanced biotech research developing next-generation tissue engineering.</p>
					</div>
				</div>

				<div class="research-item">
					<div class="research-image">
						<div class="photo-placeholder">[Photo: MIT campus]</div>
					</div>
					<div class="research-info">
						<h4>MIT Research & Science Institute</h4>
						<p>3 Patchers selected for MIT's prestigious summer research programme.</p>
					</div>
				</div>
			</div>
		</div>

		<!-- Testimonial after Research -->
		<InlineTestimonial
			quote={`Of everything interesting that's ever happened in my life, <span class="highlight">a ridiculous fraction has been downstream of Patch.</span> The belief that 'you can just do things' never left me.`}
			authorName="Sam Enright"
			authorTitle="Progress Ireland cofounder"
			initials="SE"
		/>

		<!-- Industry -->
		<div class="alumni-subsection">
			<h3 class="subsection-title">Industry</h3>

			<div class="industry-grid">
				<div class="industry-highlight">
					<PhotoFrame
						src="/AlumniPhotos/AidanWithRocket.jpg"
						alt="Aidan McNeill at Firefly Aerospace"
						aspectRatio="4/3"
						borderStyle="accent"
					/>
					<div class="industry-info">
						<h4>Firefly Aerospace</h4>
						<p>Engineer at Firefly Aerospace. Building rockets that go to space.</p>
					</div>
				</div>

				<div class="industry-highlight">
					<PhotoFrame
						src="/AlumniPhotos/ColmRedBull.png"
						alt="Colm O'Brien at Red Bull Racing"
						aspectRatio="4/3"
						borderStyle="accent"
					/>
					<div class="industry-info">
						<h4>Red Bull Racing</h4>
						<p>Aerodynamics Engineer. Formula 1.</p>
					</div>
				</div>
			</div>

			<div class="other-companies">
				<p>Alumni have gone on to engineering, product, research, and trading roles at leading technology companies and research organizations including:</p>
				<div class="company-logos">
					<span>Stripe</span>
					<span>Meta</span>
					<span>Optiver</span>
					<span>SIG</span>
					<span>Centre for Effective Altruism</span>
				</div>
			</div>
		</div>

		<!-- Final testimonial -->
		<InlineTestimonial
			variant="highlighted"
			quote={`<span class="highlight">Patch completely changed how I think about ambition and impact.</span> Being surrounded by people building boldly pushed me to dream bigger.`}
			authorName="Diana Hrisovescu"
			authorTitle="O'Shaughnessy Ventures Fellow"
			initials="DH"
		/>
	</section>

	<Divider variant="jittered" />

	<!-- ============================================
		 SECTION 7: MENTORS & ADVISORS
		 ============================================ -->
	<MentorsSection
		label="Learn from the best"
		title="Supported by exceptional leaders"
		subtitle="Patch participants learn directly from Ireland's top founders, executives, and builders who share their experience and advice."
		mentors={mentors}
	/>

	<Divider />

	<!-- ============================================
		 SECTION 8: FUNDING & SUPPORTERS
		 ============================================ -->
	<SupportersSection
		label="Thanks to"
		title="Everything is covered"
		subtitle="Accommodation. Meals. Expenses. Stipends where needed. Thanks to our supporters, access is based on potential, not background."
		supporters={supporters}
	/>

	<Divider />

	<!-- ============================================
		 SECTION 9: APPLY
		 ============================================ -->
	<ApplySection
		title="Applications open soon"
		description="If you'd like to build something great over the summer, meet an amazing group of peers, and learn from Ireland's top founders — or you know someone who would — this is where to start."
		details={[
			{ label: "Programme", value: "Summer 2025" },
			{ label: "Ages", value: "16-21" },
			{ label: "Spots", value: "30" },
			{ label: "Cost", value: "Fully funded" },
		]}
		primaryCta={{ text: "Apply Now", href: "#" }}
		secondaryCta={{ text: "Share with someone", href: "#" }}
	/>

	<!-- ============================================
		 FOOTER
		 ============================================ -->
	<Footer />
</Layout>

<style>
	/* Section: What Patch Does */
	.what-patch-does {
		padding: 48px 24px 24px;
	}

	.intro-text {
		max-width: 800px;
		margin: 0 auto;
		padding: 0 24px;
	}

	.intro-text p {
		font-size: var(--text-md);
		line-height: 1.7;
		color: var(--text-secondary);
	}

	/* Section: Programmes */
	.programmes-section {
		padding: 48px 24px;
	}

	.programmes-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 24px;
		max-width: 1100px;
		margin: 0 auto;
	}

	/* Section: Initiatives */
	.initiatives-section {
		padding: 48px 24px;
	}

	.initiatives-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 24px;
		max-width: 1100px;
		margin: 0 auto;
	}

	/* Section: Alumni */
	.alumni-section {
		padding: 48px 24px;
	}

	.alumni-subsection {
		max-width: 1100px;
		margin: 0 auto 32px;
		padding: 0 24px;
	}

	.subsection-title {
		font-size: var(--text-lg);
		font-weight: 500;
		color: var(--text-primary);
		margin-bottom: 24px;
		padding-bottom: 8px;
		border-bottom: 1px solid var(--default-border-color);
	}

	/* Companies grid */
	.companies-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 24px;
	}

	.company-card {
		display: grid;
		grid-template-columns: 140px 1fr;
		gap: 16px;
		padding: 16px;
		background: rgba(255, 255, 255, 0.5);
		border: 1px solid var(--default-border-color);
		border-radius: 4px;
	}

	.company-image {
		aspect-ratio: 1;
		border-radius: 2px;
		overflow: hidden;
	}

	.company-image .photo-placeholder {
		height: 100%;
		min-height: auto;
	}

	.company-info h4 {
		font-size: var(--text-md);
		font-weight: 500;
		color: var(--text-primary);
		margin-bottom: 4px;
	}

	.company-tagline {
		font-size: var(--text-sm);
		font-weight: 500;
		color: var(--color-accent-blue);
		margin-bottom: 8px;
	}

	.company-info p:last-child {
		font-size: var(--text-sm);
		color: var(--text-secondary);
		line-height: 1.5;
	}

	/* Research grid */
	.research-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 24px;
	}

	.research-item {
		text-align: center;
	}

	.research-image {
		aspect-ratio: 4/3;
		margin-bottom: 12px;
		border-radius: 4px;
		overflow: hidden;
	}

	.research-image .photo-placeholder {
		height: 100%;
		min-height: auto;
	}

	.research-info h4 {
		font-size: var(--text-sm);
		font-weight: 500;
		color: var(--text-primary);
		margin-bottom: 4px;
	}

	.research-info p {
		font-size: var(--text-xs);
		color: var(--text-secondary);
	}

	/* Industry grid */
	.industry-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 24px;
		margin-bottom: 24px;
	}

	.industry-highlight {
		display: flex;
		flex-direction: column;
		gap: 12px;
	}

	.industry-info h4 {
		font-size: var(--text-md);
		font-weight: 500;
		color: var(--text-primary);
		margin-bottom: 4px;
	}

	.industry-info p {
		font-size: var(--text-sm);
		color: var(--text-secondary);
	}

	.other-companies {
		padding: 20px;
		background: rgba(239, 246, 255, 0.3);
		border: 1px solid var(--grid-border-color);
		border-radius: 4px;
	}

	.other-companies p {
		font-size: var(--text-sm);
		color: var(--text-secondary);
		margin-bottom: 12px;
	}

	.company-logos {
		display: flex;
		flex-wrap: wrap;
		gap: 12px;
	}

	.company-logos span {
		font-size: var(--text-sm);
		font-weight: 500;
		color: var(--text-muted);
		padding: 6px 12px;
		background: rgba(255, 255, 255, 0.6);
		border: 1px solid var(--default-border-color);
		border-radius: 4px;
	}

	/* Inline testimonials in alumni section */
	.alumni-section :global(.inline-testimonial) {
		max-width: 800px;
		margin: 32px auto;
	}

	/* Responsive */
	@media (max-width: 1024px) {
		.companies-grid {
			grid-template-columns: 1fr;
		}

		.research-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 768px) {
		.programmes-grid,
		.initiatives-grid,
		.industry-grid {
			grid-template-columns: 1fr;
		}

		.research-grid {
			grid-template-columns: 1fr;
		}

		.company-card {
			grid-template-columns: 100px 1fr;
		}
	}

	@media (max-width: 480px) {
		.company-card {
			grid-template-columns: 1fr;
		}

		.company-image {
			aspect-ratio: 16/9;
		}
	}
</style>
