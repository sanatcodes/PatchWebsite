---
import Layout from '../layouts/Layout.astro';

// UI Components
import Button from '../components/ui/Button.astro';
import Divider from '../components/ui/Divider.astro';
import SectionHeader from '../components/ui/SectionHeader.astro';
import FaqGrid from '../components/ui/FaqGrid.astro';
import PolaroidCluster from '../components/ui/PolaroidCluster.astro';

// Section Components
import Header from '../components/sections/Header.astro';
import Hero from '../components/sections/Hero.astro';
import Footer from '../components/sections/Footer.astro';

// Programme Components
import OverviewSection from '../components/programme/OverviewSection.astro';
import SpecsSection from '../components/programme/SpecsSection.astro';
import ExamplesSection from '../components/programme/ExamplesSection.astro';
import QuoteSection from '../components/programme/QuoteSection.astro';

// Hero polaroid photos
const heroPolaroids = [
	{ src: "/Robodog.jpg", alt: "Hardware project", caption: "Robodog build" },
	{ src: "/GrantsTomasMarkey.JPG", alt: "Direct air capture prototype", caption: "DAC prototype" },
	{ src: "/AlumniLedInitiatives/GiveAGo2.png", alt: "Give(a)Go community event", caption: "GiveAGo meetup" },
	{ src: "/TECS.jpg", alt: "TECS competition", caption: "TECS winners!" },
	{ src: "/Robodog.jpg", alt: "Hardware project", caption: "Robodog build" }, // Mobile only
];

// Specifications
const specs = [
	{ key: "Grant size", value: "€200–€1,000" },
	{ key: "Turnaround", value: "~1 week" },
	{ key: "Process", value: "Short form → 15–30 min call → decision" },
];

// Examples funded
const examples = [
	{ title: "A direct air capture prototype", description: "that went on to win Top Individual at BTYSE" },
	{ title: "GiveAGo", description: "a monthly hands-on tech meetup now supported by industry partners" },
	{ title: "Travel to a 1517 Fund conference in LA", description: "leading to a startup internship in SF" },
	{ title: "Custom PCB + electronics", description: "for NFC-powered cufflinks" },
];

// Overview list items
const whatWeFund = [
	{ text: "Build a prototype or hardware project" },
	{ text: "Run a small community event or workshop" },
	{ text: "Travel to a conference or learning opportunity" },
	{ text: "Explore an idea you can't shake" },
];

// FAQ data
const faqs = [
	{
		question: "Who can apply for a grant?",
		answer: "Young people aged <strong>13–19</strong> in Ireland who want to build, create, or make something happen."
	},
	{
		question: "What can I apply with?",
		answer: `Anything that helps you learn, build, and push yourself. We fund hardware & engineering projects, community events & workshops, travel for learning, creative technical projects, and early-stage experiments. You do <strong>not</strong> need a polished idea — curiosity + action count.`
	},
	{
		question: "How much funding can I get?",
		answer: "<strong>€200–€1,000.</strong> If your project needs more, we'll help you think through other funding options."
	},
	{
		question: "What's the process?",
		answer: "Fast and lightweight: <strong>1.</strong> Short online form → <strong>2.</strong> 15–30 min call → <strong>3.</strong> Decision within ~1 week."
	},
	{
		question: "Do I get mentorship?",
		answer: "Yes. We connect you with someone helpful in your domain when relevant. Mentorship is tailored and lightweight — these grants are about momentum, not bureaucracy."
	},
	{
		question: "What do you look for?",
		answer: "Curiosity and initiative. A desire to learn by doing. Follow-through. Ambition to stretch yourself."
	},
	{
		question: "Can I reapply?",
		answer: "Yes! If your idea evolves or you have a new one, you're welcome to apply again."
	}
];
---

<Layout title="Fast Grants - Patch">
	<Header logoText="Patch" />

	<!-- Hero Section -->
	<Hero
		headline="Fast Grants"
		description="Quick grants of €200–€1,000 for young builders in Ireland — go build."
		frameLabel="FIG. 1 — GRANTS PROGRAMME"
		compact={true}
	>
		<Fragment slot="actions">
			<Button variant="cta" href="https://tally.so/r/wzN661">
				Apply Now
			</Button>
			<Button variant="secondary" href="#overview">
				Learn more
			</Button>
		</Fragment>
		<Fragment slot="media">
			<PolaroidCluster items={heroPolaroids} />
		</Fragment>
	</Hero>

	<!-- Page wrapper for logo accents -->
	<div class="page-content">
		<!-- Decorative logo accents -->
		<div class="logo-accent logo-accent-left" aria-hidden="true"></div>
		<div class="logo-accent logo-accent-right" aria-hidden="true"></div>

	<Divider />

	<!-- Overview -->
	<div id="overview">
		<OverviewSection
			leadText="Patch Grants support young builders in Ireland (ages <strong>13–19</strong>) with quick, flexible funding to help them take action."
			listLabel="Whether you want to:"
			listItems={whatWeFund}
			note="…we'll fund anything that meaningfully helps you learn by doing."
		/>
	</div>

	<Divider />

	<!-- Specifications -->
	<SpecsSection
		specs={specs}
		note="These grants are designed to help early builders get started fast — before they have a network, track record, or a budget. Even small projects can unlock confidence, skills, and a lifelong builder identity."
	/>

	<Divider />

	<!-- Examples Funded -->
	<ExamplesSection
		label="EXAMPLES OF WHAT WE'VE FUNDED"
		examples={examples}
		highlightText="At Patch, we believe young people can build real things, <em>right now</em> — and we want to help you start."
	/>

	<Divider />

	<!-- Quote & CTA -->
	<section class="cta-section">
		<div class="cta-content">
			<p class="cta-lead">Sound interesting?</p>
			<div class="cta-buttons">
				<a href="https://tally.so/r/wzN661" class="btn-apply">Apply Now</a>
				<span class="cta-or">or</span>
				<a href="#newsletter" class="btn-mailing">join our mailing list</a>
				<span class="cta-suffix">to find out more</span>
			</div>
		</div>
	</section>

	<Divider />

	<!-- Quote -->
	<QuoteSection
		quote="Patch exists to give curious, ambitious young people a space and community where they can realise their potential."
		author="Tom McCarthy"
		authorTitle="Patch Founder"
		photoSrc="/TomMcCarthy.jpg"
	/>

	<Divider />

	<!-- FAQs -->
	<section class="faqs-section">
		<SectionHeader title="FAQs" />
		<FaqGrid items={faqs} />
	</section>

	<Divider />

	<!-- Partners & Contact -->
	<section class="partners-section">
		<div class="partners-content">
			<span class="partners-label">PARTNERS</span>
			<p>Thanks to generous partner support, we offer <strong>€20,000 in grants</strong> annually. Applications reviewed on a rolling basis.</p>
			<p class="thanks">With thanks to <strong>Brian Kingham</strong>, <strong>Mark Cummins</strong>, <strong>Joe Liemandt</strong>, <strong>Rob Granieri</strong>, and <strong>Craig Falls</strong>.</p>
			<p class="contact">Questions? <a href="mailto:grants@joinpatch.org">grants@joinpatch.org</a></p>
		</div>
	</section>

	</div><!-- end page-content -->

	<Footer />
</Layout>

<style>
	/* Page content wrapper */
	.page-content {
		position: relative;
		overflow: hidden;
	}

	/* Decorative logo accents - absolute positioned within page */
	.logo-accent {
		position: absolute;
		width: 220px;
		height: 220px;
		background-image: url('/LightBlueLogoNoBackground.png');
		background-size: contain;
		background-repeat: no-repeat;
		background-position: center;
		opacity: 0.15;
		pointer-events: none;
		z-index: 0;
	}

	.logo-accent-left {
		left: 30px;
		top: 600px;
		transform: rotate(-12deg);
	}

	.logo-accent-right {
		right: 30px;
		top: 1400px;
		transform: rotate(8deg);
	}

	@media (max-width: 1200px) {
		.logo-accent {
			width: 180px;
			height: 180px;
			opacity: 0.12;
		}

		.logo-accent-left {
			left: 15px;
		}

		.logo-accent-right {
			right: 15px;
		}
	}

	@media (max-width: 900px) {
		.logo-accent {
			width: 120px;
			height: 120px;
			opacity: 0.1;
		}

		.logo-accent-left {
			left: 10px;
			top: 400px;
		}

		.logo-accent-right {
			right: 10px;
			top: 1000px;
		}
	}

	/* CTA Section */
	.cta-section {
		padding: 56px 24px;
		text-align: center;
	}

	.cta-content {
		max-width: 600px;
		margin: 0 auto;
	}

	.cta-lead {
		font-family: Georgia, 'Times New Roman', serif;
		font-size: 1.5rem;
		color: var(--text-primary);
		margin: 0 0 24px;
	}

	.cta-buttons {
		display: flex;
		align-items: center;
		justify-content: center;
		flex-wrap: wrap;
		gap: 12px;
	}

	.btn-apply {
		display: inline-block;
		padding: 14px 28px;
		background: var(--color-orange-400);
		color: #fff;
		font-size: 1rem;
		font-weight: 600;
		text-decoration: none;
		border-radius: 4px;
		box-shadow: inset 0 -2px 0 rgba(0, 0, 0, 0.15);
		transition: background 0.15s ease;
	}

	.btn-apply:hover {
		background: var(--color-orange-500);
	}

	.cta-or {
		color: var(--text-muted);
		font-size: 1rem;
	}

	.btn-mailing {
		color: var(--color-accent-blue);
		font-size: 1rem;
		text-decoration: underline;
		text-underline-offset: 3px;
	}

	.btn-mailing:hover {
		color: var(--text-primary);
	}

	.cta-suffix {
		color: var(--text-secondary);
		font-size: 1rem;
	}

	@media (max-width: 480px) {
		.cta-lead {
			font-size: 1.25rem;
		}

		.cta-buttons {
			flex-direction: column;
			gap: 16px;
		}

		.cta-or {
			display: none;
		}

		.cta-suffix {
			display: block;
			margin-top: -8px;
		}
	}

	/* FAQs Section */
	.faqs-section {
		padding: 56px 24px;
		max-width: 750px;
		margin: 0 auto;
	}

	/* Partners Section */
	.partners-section {
		padding: 48px 24px;
	}

	.partners-content {
		max-width: 600px;
		margin: 0 auto;
		text-align: center;
	}

	.partners-label {
		display: block;
		font-family: 'Courier New', monospace;
		font-size: 0.65rem;
		font-weight: 700;
		letter-spacing: 0.15em;
		color: var(--text-muted);
		margin-bottom: 16px;
	}

	.partners-content p {
		font-size: var(--text-base);
		color: var(--text-secondary);
		line-height: 1.6;
		margin-bottom: 12px;
	}

	.partners-content strong {
		color: var(--text-primary);
	}

	.partners-content .thanks {
		font-size: var(--text-sm);
		color: var(--text-muted);
	}

	.partners-content .contact {
		margin-top: 20px;
		padding-top: 20px;
		border-top: 1px solid var(--default-border-color);
	}

	.partners-content a {
		color: var(--color-accent-blue);
	}

	@media (max-width: 480px) {
		.faqs-section,
		.partners-section {
			padding: 36px 16px;
		}
	}
</style>
