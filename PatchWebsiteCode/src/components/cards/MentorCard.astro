---
interface Props {
    name: string;
    title: string;
    imageSrc?: string;
    initials?: string;
    class?: string;
}

const { name, title, imageSrc, initials, class: className } = Astro.props;

// Generate initials from name if not provided
const displayInitials = initials || name.split(' ').map(n => n[0]).join('').slice(0, 2);
---

<div class:list={['mentor-card', className]}>
    <div class="mentor-image">
        {imageSrc ? (
            <img src={imageSrc} alt={name} loading="lazy" />
        ) : (
            <div class="mentor-placeholder">
                <span class="mentor-initials">{displayInitials}</span>
            </div>
        )}
    </div>
    <div class="mentor-info">
        <h4 class="mentor-name">{name}</h4>
        <p class="mentor-title">{title}</p>
    </div>
</div>

<style>
    .mentor-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 16px;
    }

    .mentor-image {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        overflow: hidden;
        margin-bottom: 12px;
        border: 2px solid var(--color-blue-100);
    }

    .mentor-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .mentor-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, var(--color-blue-100), var(--color-blue-200));
    }

    .mentor-initials {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--color-accent-blue);
    }

    .mentor-name {
        font-size: var(--text-sm);
        font-weight: 500;
        color: var(--text-primary);
        margin-bottom: 4px;
    }

    .mentor-title {
        font-size: var(--text-xs);
        color: var(--text-muted);
        line-height: 1.4;
    }
</style>
