---
interface Props {
    name: string;
    title: string;
    imageSrc?: string;
    initials?: string;
    link?: string;
    rotation?: 'cw-sm' | 'ccw-sm' | 'cw-md' | 'ccw-md' | 'none';
    class?: string;
}

const { name, title, imageSrc, initials, link, rotation = 'none', class: className } = Astro.props;

// Generate initials from name if not provided
const displayInitials = initials || name.split(' ').map(n => n[0]).join('').slice(0, 2);

// Rotation class mapping
const rotationClass = rotation !== 'none' ? `rotate-${rotation}` : '';
---

{link ? (
    <a href={link} target="_blank" rel="noopener noreferrer" class:list={['mentor-card', 'mentor-card-link', rotationClass, className]}>
        <!-- Pushpin -->
        <div class="pushpin" aria-hidden="true"></div>

        <div class="mentor-photo">
            {imageSrc ? (
                <img src={imageSrc} alt={name} loading="lazy" />
            ) : (
                <div class="mentor-placeholder">
                    <span class="mentor-initials">{displayInitials}</span>
                </div>
            )}
        </div>
        <div class="mentor-info">
            <h4 class="mentor-name">{name}</h4>
            <p class="mentor-title">{title}</p>
        </div>
    </a>
) : (
    <div class:list={['mentor-card', rotationClass, className]}>
        <!-- Pushpin -->
        <div class="pushpin" aria-hidden="true"></div>

        <div class="mentor-photo">
            {imageSrc ? (
                <img src={imageSrc} alt={name} loading="lazy" />
            ) : (
                <div class="mentor-placeholder">
                    <span class="mentor-initials">{displayInitials}</span>
                </div>
            )}
        </div>
        <div class="mentor-info">
            <h4 class="mentor-name">{name}</h4>
            <p class="mentor-title">{title}</p>
        </div>
    </div>
)}

<style>
    .mentor-card {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 12px;
        padding-top: 16px;
        background: #fff;
        box-shadow: 2px 3px 8px rgba(0,0,0,0.08);
        border: 1px solid #e8e8e8;
    }

    .mentor-card-link {
        text-decoration: none;
        color: inherit;
        transition: all 0.2s ease;
    }

    .mentor-card-link:hover {
        transform: rotate(0deg) translateY(-4px) !important;
        box-shadow: 3px 6px 12px rgba(0,0,0,0.15);
    }

    /* Pushpin effect */
    .pushpin {
        position: absolute;
        top: -5px;
        left: 50%;
        transform: translateX(-50%);
        width: 12px;
        height: 12px;
        background: #c44;
        border-radius: 50%;
        box-shadow:
            inset 0 2px 3px rgba(255,255,255,0.3),
            inset 0 -1px 2px rgba(0,0,0,0.2),
            0 2px 4px rgba(0,0,0,0.2);
        z-index: 10;
    }

    /* Small highlight on pushpin */
    .pushpin::after {
        content: '';
        position: absolute;
        top: 2px;
        left: 3px;
        width: 4px;
        height: 4px;
        background: rgba(255,255,255,0.4);
        border-radius: 50%;
    }

    .mentor-photo {
        width: 160px;
        height: 200px;
        overflow: hidden;
        margin-bottom: 12px;
        border: 1px solid #ddd;
        background: #f5f5f5;
    }

    .mentor-photo img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center top;
    }

    .mentor-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, var(--color-cream-100), var(--color-cream-200));
    }

    .mentor-initials {
        font-family: 'Courier New', Courier, monospace;
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--text-secondary);
    }

    .mentor-name {
        font-family: 'Courier New', Courier, monospace;
        font-size: var(--text-sm);
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 4px;
        letter-spacing: 0.02em;
    }

    .mentor-title {
        font-size: var(--text-xs);
        color: var(--text-muted);
        line-height: 1.4;
    }

    /* Rotation classes */
    .rotate-cw-sm { transform: rotate(0.8deg); }
    .rotate-ccw-sm { transform: rotate(-0.8deg); }
    .rotate-cw-md { transform: rotate(1.5deg); }
    .rotate-ccw-md { transform: rotate(-1.5deg); }
</style>
