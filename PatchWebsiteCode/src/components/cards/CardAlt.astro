---
interface Props {
    title: string;
    description: string;
    featured?: boolean;
    gridOverlay?: boolean;
    href?: string;
    class?: string;
}

const { title, description, featured = false, gridOverlay = false, href, class: className } = Astro.props;
---

<div class:list={['card-alt', { featured, 'with-grid-overlay': gridOverlay }, className]}>
    <div class="card-alt-image">
        <slot name="image">
            [Image]
        </slot>
        {gridOverlay && <div class="grid-overlay" />}
    </div>
    <div class="card-alt-content">
        <h3>{title}</h3>
        <p>{description}</p>
        {href && (
            <a href={href} class="card-link">Learn more &rarr;</a>
        )}
    </div>
</div>

<style>
    .card-alt {
        position: relative;
        padding: 10px;
        border: 1px solid var(--default-border-color);
        border-radius: 4px;
        background-color: rgba(255, 255, 255, 0.6);
        box-shadow: 6px 6px 0 hsla(219, 93%, 42%, 0.06);
        transition: all 0.2s ease;
        overflow: hidden;
    }

    .card-alt:hover {
        border-color: var(--color-blue-300);
        box-shadow: 8px 8px 0 hsla(219, 100%, 50%, 0.1);
        transform: translateY(-2px);
    }

    .card-alt-image {
        aspect-ratio: 16/9;
        background: var(--color-cream-50);
        border: 1px solid var(--default-border-color);
        border-radius: 2px;
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #98a0ae;
        font-size: 0.875rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .card-alt-image :global(img) {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .card-alt-content {
        padding: 8px 4px;
    }

    .card-alt-content h3 {
        font-size: 1rem;
        font-weight: 500;
        color: var(--text-primary);
        margin-bottom: 4px;
    }

    .card-alt-content p {
        font-size: 0.8125rem;
        color: var(--text-secondary);
    }

    .card-link {
        display: inline-block;
        margin-top: 8px;
        font-size: 0.8125rem;
        color: var(--color-accent-blue);
        text-decoration: none;
        font-weight: 500;
    }

    .card-link:hover {
        text-decoration: underline;
    }

    /* Featured variant - 2x prominence */
    .card-alt.featured {
        grid-column: span 2;
        padding: 16px;
    }

    .card-alt.featured .card-alt-image {
        aspect-ratio: 2/1;
    }

    .card-alt.featured .card-alt-content h3 {
        font-size: 1.25rem;
    }

    .card-alt.featured .card-alt-content p {
        font-size: 0.9375rem;
    }

    /* Grid overlay on images */
    .grid-overlay {
        position: absolute;
        inset: 0;
        background: repeating-linear-gradient(
            90deg,
            transparent,
            transparent 11px,
            rgba(190, 219, 255, 0.1) 11px,
            rgba(190, 219, 255, 0.1) 12px
        ),
        repeating-linear-gradient(
            0deg,
            transparent,
            transparent 11px,
            rgba(190, 219, 255, 0.1) 11px,
            rgba(190, 219, 255, 0.1) 12px
        );
        pointer-events: none;
        opacity: 0.8;
    }

    /* Make image container relative for overlay positioning */
    .card-alt.with-grid-overlay .card-alt-image {
        position: relative;
    }

    /* Responsive: featured card goes single column on mobile */
    @media (max-width: 768px) {
        .card-alt.featured {
            grid-column: span 1;
        }

        .card-alt.featured .card-alt-image {
            aspect-ratio: 16/9;
        }
    }

    /* Hide grid overlay on smaller screens */
    @media (max-width: 640px) {
        .grid-overlay {
            display: none;
        }
    }
</style>
