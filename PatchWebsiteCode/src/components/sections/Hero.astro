---
interface Props {
    headline: string;
    description: string;
    frameLabel?: string;
    compact?: boolean;
}

const { headline, description, frameLabel = "FIG. 1 â€” PATCH COMMUNITY", compact = false } = Astro.props;
---

<section class:list={['hero-section', { 'hero-compact': compact }]}>
    <!-- Blueprint background with texture -->
    <div class="blueprint-bg" aria-hidden="true">
        <div class="blueprint-texture"></div>
        <div class="blueprint-grid"></div>
        <!-- Edge wear -->
        <div class="blueprint-edge-wear"></div>
        <!-- Subtle age spots -->
        <div class="age-spot age-spot-1"></div>
        <div class="age-spot age-spot-2"></div>
        <!-- Corner markers -->
        <div class="corner-mark top-left"></div>
        <div class="corner-mark top-right"></div>
        <div class="corner-mark bottom-right"></div>
        <!-- Pinhole marks - like it was pinned to a drafting board -->
        <div class="pinhole pinhole-tl"></div>
        <div class="pinhole pinhole-tr"></div>
        <div class="pinhole pinhole-br"></div>
    </div>

    <!-- Hand-drawn annotations -->
    <div class="hero-annotations" aria-hidden="true">
        <img
            src="/sketches/rocketSketch.svg"
            alt=""
            class="hero-sketch hero-sketch-rocket"
            loading="eager"
        />
    </div>

    <div class="hero-layout">
        <div class="hero-content">
            <div class="content-frame">
                <img
                    src="/sketches/LightBulbWithArrow.svg"
                    alt=""
                    class="hero-sketch hero-sketch-lightbulb"
                    aria-hidden="true"
                    loading="eager"
                />
                <h1 set:html={headline} />
                <p>{description}</p>
                <div class="hero-actions">
                    <slot name="actions" />
                </div>
            </div>
        </div>

        <div class="hero-media">
            <div class="blueprint-frame">
                <div class="frame-label">{frameLabel}</div>
                <slot name="media" />
                <div class="frame-annotations">
                    <span class="annotation">A</span>
                    <span class="annotation">B</span>
                    <span class="annotation">C</span>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .hero-section {
        position: relative;
        padding: 80px 24px 192px;
        background: #4a7fbf;
        isolation: isolate;
        overflow: hidden;
    }

    /* Blueprint background container */
    .blueprint-bg {
        position: absolute;
        inset: 0;
        pointer-events: none;
    }

    /* Hand-drawn sketch annotations */
    .hero-annotations {
        position: absolute;
        inset: 0;
        pointer-events: none;
        z-index: 2; /* above blueprint, below content */
    }

    .hero-sketch {
        position: absolute;
        opacity: 0.85;
        filter: drop-shadow(0 1px 1px rgba(0, 0, 0, 0.25)) brightness(0) invert(1);
    }

    /* Rocket placement */
    .hero-sketch-rocket {
        bottom: 0;
        left: 0;
        width: 280px;
        transform: rotate(-8deg);
    }

    /* Paper texture using noise */
    .blueprint-texture {
        position: absolute;
        inset: 0;
        background-image: url('/noise.png');
        background-size: 200px;
        opacity: 0.08;
        mix-blend-mode: overlay;
    }

    /* Grid lines */
    .blueprint-grid {
        position: absolute;
        inset: 0;
        background-image:
            /* Major grid lines */
            linear-gradient(to right, rgba(255, 255, 255, 0.25) 1px, transparent 1px),
            linear-gradient(to bottom, rgba(255, 255, 255, 0.25) 1px, transparent 1px),
            /* Minor grid lines */
            linear-gradient(to right, rgba(255, 255, 255, 0.08) 1px, transparent 1px),
            linear-gradient(to bottom, rgba(255, 255, 255, 0.08) 1px, transparent 1px);
        background-size:
            80px 80px,
            80px 80px,
            16px 16px,
            16px 16px;
    }

    /* Edge wear/aging effect */
    .blueprint-edge-wear {
        position: absolute;
        inset: 0;
        pointer-events: none;
        box-shadow:
            inset 0 0 100px rgba(0, 0, 0, 0.12),
            inset 0 0 200px rgba(0, 0, 0, 0.06);
    }

    /* Corner registration marks */
    .corner-mark {
        position: absolute;
        width: 40px;
        height: 40px;
        border: 2px solid rgba(255, 255, 255, 0.4);
        pointer-events: none;
    }

    .corner-mark::before,
    .corner-mark::after {
        content: '';
        position: absolute;
        background: rgba(255, 255, 255, 0.4);
    }

    .corner-mark::before {
        width: 12px;
        height: 2px;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .corner-mark::after {
        width: 2px;
        height: 12px;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .corner-mark.top-left {
        top: 24px;
        left: 24px;
        border-right: none;
        border-bottom: none;
    }

    .corner-mark.top-right {
        top: 24px;
        right: 24px;
        border-left: none;
        border-bottom: none;
    }

    .corner-mark.bottom-left {
        bottom: 24px;
        left: 24px;
        border-right: none;
        border-top: none;
    }

    .corner-mark.bottom-right {
        bottom: 24px;
        right: 24px;
        border-left: none;
        border-top: none;
    }

    /* Subtle age spots - like old paper stains */
    .age-spot {
        position: absolute;
        border-radius: 50%;
        pointer-events: none;
        opacity: 0.03;
    }

    .age-spot-1 {
        top: 20%;
        left: 15%;
        width: 150px;
        height: 120px;
        background: radial-gradient(ellipse, rgba(139, 90, 43, 0.7), transparent 70%);
        transform: rotate(25deg);
    }

    .age-spot-2 {
        bottom: 30%;
        right: 25%;
        width: 100px;
        height: 80px;
        background: radial-gradient(ellipse, rgba(139, 90, 43, 0.5), transparent 65%);
        transform: rotate(-15deg);
    }

    /* Pinhole marks - like it was pinned to a drafting board */
    .pinhole {
        position: absolute;
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: radial-gradient(circle,
            rgba(0, 0, 0, 0.15) 0%,
            rgba(0, 0, 0, 0.08) 40%,
            transparent 70%
        );
        box-shadow:
            inset 0 1px 2px rgba(0, 0, 0, 0.2),
            0 0 0 1px rgba(255, 255, 255, 0.1);
        pointer-events: none;
    }

    .pinhole-tl { top: 40px; left: 40px; }
    .pinhole-tr { top: 40px; right: 40px; }
    .pinhole-bl { bottom: 40px; left: 40px; }
    .pinhole-br { bottom: 40px; right: 40px; }

    .hero-layout {
        position: relative;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 48px;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto;
        z-index: 3;
    }

    .hero-content {
        position: relative;
        text-align: left;
    }

    .content-frame {
        position: relative;
    }

    /* Lightbulb positioned relative to title */
    .content-frame .hero-sketch-lightbulb {
        position: absolute;
        top: -80px;
        left: -100px;
        width: 120px;
        opacity: 0.85;
        filter: drop-shadow(0 1px 1px rgba(0, 0, 0, 0.25)) brightness(0) invert(1);
        pointer-events: none;
    }

    .hero-content h1 {
        font-size: 3rem;
        font-weight: 400;
        font-family: Georgia, 'Times New Roman', serif;
        color: #ffffff;
        margin-bottom: 1rem;
        line-height: 1.15;
    }

    .hero-content h1 :global(.orange-highlight) {
        background: rgba(255, 127, 0, 0.35);
        padding: 2px 6px;
        border-radius: 2px;
    }

    .hero-content p {
        font-size: 1.125rem;
        margin-bottom: 1.5rem;
        color: rgba(255, 255, 255, 0.85);
        letter-spacing: -0.01em;
        max-width: 480px;
    }

    .hero-actions {
        display: flex;
        gap: 24px;
        justify-content: flex-start;
        margin-top: 24px;
        flex-wrap: wrap;
    }

    /* Ensure engineering button styles work on blueprint background */
    .hero-actions :global(.btn-technical) {
        background: #fff;
        margin-right: 16px; /* Space for leader line */
    }

    .hero-media {
        position: relative;
    }

    /* Blueprint-style frame around photos */
    .blueprint-frame {
        position: relative;
        padding: 12px;
        border: 2px solid rgba(255, 255, 255, 0.5);
        background: rgba(255, 255, 255, 0.05);
    }

    /* Dashed outer frame */
    .blueprint-frame::before {
        content: '';
        position: absolute;
        inset: -8px;
        border: 1px dashed rgba(255, 255, 255, 0.3);
        pointer-events: none;
    }

    .frame-label {
        position: absolute;
        bottom: 100%;
        left: 0;
        margin-bottom: 8px;
        font-family: 'Courier New', monospace;
        font-size: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.1em;
        color: rgba(255, 255, 255, 0.7);
        text-transform: uppercase;
    }

    .frame-annotations {
        position: absolute;
        right: -32px;
        top: 0;
        bottom: 0;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        padding: 20px 0;
    }

    .annotation {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 24px;
        height: 24px;
        border: 1.5px solid rgba(255, 255, 255, 0.5);
        border-radius: 50%;
        font-family: 'Courier New', monospace;
        font-size: 0.7rem;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.7);
    }

    .annotation::before {
        content: '';
        position: absolute;
        right: 100%;
        width: 8px;
        height: 1.5px;
        background: rgba(255, 255, 255, 0.4);
        margin-right: 4px;
    }

    @media (max-width: 1024px) {
        .hero-layout {
            grid-template-columns: 1fr;
            gap: 40px;
        }

        .hero-content {
            text-align: center;
            max-width: 700px;
            margin: 0 auto;
        }

        .hero-content p {
            max-width: none;
        }

        .hero-actions {
            justify-content: center;
        }

        .frame-annotations {
            display: none;
        }

        .hero-sketch-rocket {
            width: 140px;
            bottom: 0;
            left: 0;
        }

        .content-frame .hero-sketch-lightbulb {
            top: -60px;
            left: -20px;
            width: 100px;
        }
    }

    @media (max-width: 768px) {
        .hero-content h1 {
            font-size: 2.5rem;
        }

        .hero-section {
            padding: 60px 16px 160px;
        }

        .corner-mark,
        .pinhole,
        .age-spot {
            display: none;
        }

        .hero-annotations {
            display: none;
        }

        .content-frame .hero-sketch-lightbulb {
            display: none;
        }
    }

    @media (max-width: 480px) {
        .hero-content h1 {
            font-size: 2rem;
        }

        .blueprint-frame::before {
            display: none;
        }

        .frame-label {
            display: none;
        }
    }

    /* Compact variant for secondary pages */
    .hero-compact {
        padding: 60px 24px 140px;
    }

    .hero-compact .hero-content h1 {
        font-size: 2.5rem;
    }

    .hero-compact .blueprint-frame {
        transform: scale(0.9);
        transform-origin: top center;
    }

    @media (max-width: 1024px) {
        .hero-compact {
            padding: 50px 24px 120px;
        }
    }

    @media (max-width: 768px) {
        .hero-compact {
            padding: 40px 16px 100px;
        }

        .hero-compact .hero-content h1 {
            font-size: 2rem;
        }
    }
</style>
