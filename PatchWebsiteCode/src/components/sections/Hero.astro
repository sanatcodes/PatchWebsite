---
import JitteredGrid from '../ui/JitteredGrid.astro';

interface Props {
    headline: string;
    description: string;
}

const { headline, description } = Astro.props;
---

<section class="hero-section">
    <JitteredGrid
        seed={42}
        opacity={0.8}
        animate={true}
        animationDuration={60}
        maskDirection="none"
    />

    <div class="hero-layout">
        <div class="hero-content">
            <h1>{headline}</h1>
            <p>{description}</p>
            <div class="hero-actions">
                <slot name="actions" />
            </div>
        </div>

        <div class="hero-media">
            <slot name="media" />
        </div>
    </div>
</section>

<style>
    .hero-section {
        position: relative;
        padding: 80px 24px 192px;
        background: linear-gradient(to top, rgba(219, 234, 254, 0.2), transparent);
        isolation: isolate;
        overflow: hidden;
    }

    .hero-layout {
        position: relative;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 48px;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto;
        z-index: 3;
    }

    .hero-content {
        position: relative;
        text-align: left;
    }

    .hero-content h1 {
        font-size: 3rem;
        font-weight: 400;
        font-family: Georgia, 'Times New Roman', serif;
        color: var(--color-accent-blue);
        margin-bottom: 1rem;
        line-height: 1.15;
    }

    .hero-content p {
        font-size: 1.125rem;
        margin-bottom: 1.5rem;
        color: var(--text-secondary);
        letter-spacing: -0.01em;
        max-width: 480px;
    }

    .hero-actions {
        display: flex;
        gap: 12px;
        justify-content: flex-start;
        margin-top: 24px;
    }

    .hero-media {
        position: relative;
    }

    @media (max-width: 1024px) {
        .hero-layout {
            grid-template-columns: 1fr;
            gap: 40px;
        }

        .hero-content {
            text-align: center;
            max-width: 700px;
            margin: 0 auto;
        }

        .hero-content p {
            max-width: none;
        }

        .hero-actions {
            justify-content: center;
        }

    }

    @media (max-width: 768px) {
        .hero-content h1 {
            font-size: 2.5rem;
        }

        .hero-section {
            padding: 60px 16px 160px;
        }
    }

    @media (max-width: 480px) {
        .hero-content h1 {
            font-size: 2rem;
        }
    }
</style>
