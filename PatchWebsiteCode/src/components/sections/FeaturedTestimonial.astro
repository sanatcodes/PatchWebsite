---
import Avatar from '../ui/Avatar.astro';
import SectionHeader from '../ui/SectionHeader.astro';
import JitteredGrid from '../ui/JitteredGrid.astro';

interface Props {
    sectionTitle?: string;
    sectionSubtitle?: string;
    quote: string;
    authorName: string;
    authorTitle: string;
    initials: string;
}

const { sectionTitle, sectionSubtitle, quote, authorName, authorTitle, initials } = Astro.props;
---

<section class="featured-testimonial-section">
    {sectionTitle && <SectionHeader title={sectionTitle} subtitle={sectionSubtitle} />}

    <div class="featured-testimonial">
        <!-- Jittered grid background overlay -->
        <JitteredGrid
            seed={789}
            opacity={0.06}
            animate={false}
            color="rgba(255, 177, 0, 0.5)"
            maskDirection="none"
        />

        <div class="featured-testimonial-content">
            <!-- Company logo -->
            <slot name="logo" />

            <!-- Quote -->
            <blockquote class="featured-testimonial-quote" set:html={quote} />

            <!-- Author -->
            <div class="featured-testimonial-author">
                <Avatar initials={initials} size="md" />
                <div class="featured-testimonial-author-info">
                    <h4>{authorName}</h4>
                    <p>{authorTitle}</p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .featured-testimonial-section {
        padding: 48px 24px;
    }

    .featured-testimonial {
        position: relative;
        max-width: 600px;
        margin: 0 auto;
        padding: 24px;
        border-radius: 4px;
        border: 1px solid rgba(255, 177, 0, 0.25);
        background: linear-gradient(to bottom,
            rgba(255, 247, 237, 0.4),
            rgba(239, 246, 255, 0.1)
        );
        box-shadow: 6px 6px 0 rgba(255, 177, 0, 0.08);
        overflow: hidden;
    }

    .featured-testimonial-content {
        position: relative;
        z-index: 2;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .featured-testimonial-content :global(svg:first-child) {
        height: 24px;
        width: auto;
        color: var(--text-primary);
    }

    .featured-testimonial-quote {
        font-size: 0.9375rem;
        line-height: 1.6;
        color: var(--text-primary);
        position: relative;
    }

    .featured-testimonial-quote::before {
        content: '"';
        position: absolute;
        right: 100%;
        top: 0;
    }

    .featured-testimonial-quote::after {
        content: '"';
    }

    .featured-testimonial-quote :global(.highlight) {
        background-color: var(--highlight-orange);
        border-radius: 2px;
        padding: 1px 4px;
        margin: 0 -2px;
    }

    .featured-testimonial-author {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .featured-testimonial-author-info h4 {
        font-size: 0.8125rem;
        font-weight: 500;
        color: var(--text-primary);
        font-family: Georgia, 'Times New Roman', serif;
        margin-bottom: 2px;
    }

    .featured-testimonial-author-info p {
        font-size: 0.6875rem;
        color: var(--text-muted);
    }

</style>
