---
interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<footer class:list={['footer', className]}>
    <!-- Blueprint grid overlay -->
    <div class="footer-grid" aria-hidden="true"></div>

    <div class="footer-content">
        <div class="footer-main">
            <div class="footer-brand">
                <a href="/" class="footer-logo">
                    <img src="/PatchLogoBlue.svg" alt="Patch" />
                    <span>Patch</span>
                </a>
                <p class="footer-tagline">Ireland's community for exceptional young technologists, scientists, and entrepreneurs.</p>
            </div>

            <div class="footer-links">
                <div class="footer-column">
                    <h4>Programmes</h4>
                    <a href="/summer-programme">Summer Programme</a>
                    <a href="/grants">Fast Grants</a>
                    <a href="/sf-fellowship">SF Fellowship</a>
                    <a href="https://jointecs.org">TECS</a>
                </div>

                <div class="footer-column">
                    <h4>About</h4>
                    <a href="https://joinpatch.org/impact-report">Impact Report</a>
                </div>

                <div class="footer-column">
                    <h4>Legal</h4>
                    <a href="https://docs.google.com/document/d/10C0kWFrsb2-m-agPE3s_7GnoFOUYpr3u2oMgiuVepAE/edit?tab=t.0#heading=h.dertvf1zp4dl" target="_blank" rel="noopener noreferrer">Child Protection Policy</a>
                    <a href="https://docs.google.com/document/d/1WWAtHCqqpH0ENNbzcV5kM8gk13wpSag5s7GoWCLSKnI/edit?tab=t.0#heading=h.s8cu0kgsoxvv" target="_blank" rel="noopener noreferrer">Child Safeguarding Statement</a>
                </div>

                <div class="footer-column">
                    <h4>Connect</h4>
                    <a href="https://twitter.com/joinpatch_" target="_blank" rel="noopener">Twitter / X</a>
                    <a href="https://www.linkedin.com/company/joinpatch" target="_blank" rel="noopener">LinkedIn</a>
                    <a href="https://www.instagram.com/joinpatch_/" target="_blank" rel="noopener">Instagram</a>
                    <a href="mailto:team@joinpatch.org">team@joinpatch.org</a>
                </div>
            </div>
        </div>

        <div class="footer-newsletter">
            <p>Want to stay updated? Get news about Patch programmes and events.</p>
            <a href="https://subscribe.joinpatch.org/" class="newsletter-button" target="_blank" rel="noopener">Subscribe</a>
        </div>

        <div class="footer-bottom">
            <p>&copy; 2025 Patch. All rights reserved.</p>
        </div>
    </div>
</footer>

<style>
    .footer {
        position: relative;
        padding: 64px 24px 32px;
        background: #4a7fbf;
        border-top: none;
        overflow: hidden;
    }

    /* Blueprint grid overlay */
    .footer-grid {
        position: absolute;
        inset: 0;
        background:
            linear-gradient(to right, rgba(255, 255, 255, 0.08) 1px, transparent 1px),
            linear-gradient(to bottom, rgba(255, 255, 255, 0.08) 1px, transparent 1px);
        background-size: 40px 40px;
        pointer-events: none;
    }

    .footer-content {
        position: relative;
        z-index: 1;
        max-width: 1100px;
        margin: 0 auto;
    }

    .footer-main {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 48px;
        margin-bottom: 48px;
    }

    .footer-brand {
        max-width: 280px;
    }

    .footer-logo {
        display: flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        margin-bottom: 12px;
    }

    .footer-logo img {
        height: 24px;
        width: auto;
        /* Invert blue logo to white on blue background */
        filter: brightness(0) invert(1);
    }

    .footer-logo span {
        font-size: 1.125rem;
        font-weight: 600;
        color: #fff;
    }

    .footer-tagline {
        font-size: var(--text-sm);
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.5;
    }

    .footer-links {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 32px;
    }

    .footer-column h4 {
        font-family: 'Courier New', Courier, monospace;
        font-size: var(--text-xs);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: rgba(255, 255, 255, 0.6);
        margin-bottom: 12px;
    }

    .footer-column a {
        display: block;
        font-size: var(--text-sm);
        color: rgba(255, 255, 255, 0.85);
        text-decoration: none;
        margin-bottom: 8px;
        transition: color 0.15s ease;
    }

    .footer-column a:hover {
        color: var(--color-orange-400);
        text-decoration: none;
    }

    .footer-newsletter {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 16px 24px;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 4px;
        margin-bottom: 32px;
    }

    .footer-newsletter p {
        font-size: var(--text-sm);
        color: rgba(255, 255, 255, 0.7);
        margin: 0;
        flex: 1;
    }

    .newsletter-button {
        display: inline-block;
        padding: 8px 16px;
        font-size: var(--text-sm);
        font-weight: 500;
        color: #1a1a1a;
        background: var(--color-orange-400);
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-family: 'Courier New', Courier, monospace;
        letter-spacing: 0.05em;
        transition: background 0.15s ease;
        text-decoration: none;
    }

    .newsletter-button:hover {
        background: var(--color-orange-500);
    }

    .footer-bottom {
        padding-top: 24px;
        border-top: 1px solid rgba(255, 255, 255, 0.15);
        text-align: center;
    }

    .footer-bottom p {
        font-family: 'Courier New', Courier, monospace;
        font-size: var(--text-xs);
        color: rgba(255, 255, 255, 0.5);
        letter-spacing: 0.05em;
    }

    @media (max-width: 1024px) {
        .footer-main {
            grid-template-columns: 1fr;
            gap: 32px;
        }

        .footer-brand {
            max-width: none;
        }

        .footer-links {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 640px) {
        .footer-links {
            grid-template-columns: 1fr;
            gap: 24px;
        }

        .footer-newsletter {
            flex-direction: column;
            align-items: flex-start;
            gap: 12px;
        }
    }
</style>
